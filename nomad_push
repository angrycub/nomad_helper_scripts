#!/usr/bin/env bash

first_node=nomad-server-1
nodes=( nomad-server-2 nomad-server-3 nomad-client-1 nomad-client-2 nomad-client-3 )

echo "ğŸšš Deploying nomad to /opt/nomad/bin on first node..."
  scp nomad root@$first_node:/opt/nomad/bin/nomad-$1

echo "ğŸšš Deploying nomad to /opt/nomad/bin on other nodes..."
I=0
for Node in "${nodes[@]}"
do
  echo " - ğŸ“¦ ${Node}"
  scp root@$first_node:/opt/nomad/bin/nomad-$1 root@${Node}:/opt/nomad/bin/nomad-$1 &
  pids[${I}]=$!
  let "I++"
done

echo "âŒ›ï¸ Waiting for PIDs to complete"
for pid in ${pids[*]}
do
  echo " - â° Waiting for PID $pid"
  wait $pid;
done;
